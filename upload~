#!/bin/tcsh

if($#argv > 0)then
    set host = $argv[1]
else
    set host = ''
endif

switch ($host)
case "dio"
    rsync --progress -azu *.f90 -e ssh dio:simulation/PIC2D/src/shock/
    breaksw
case "hx600"
    rsync --progress -azu *.f90 -e ssh sp2:simulation/PIC2D/src/shock/
    breaksw
case "maja"
    rsync --progress -azu *.f90 -e ssh maja:simulation/PIC2D/src/shock/
    breaksw
default
    echo "choose gemsisc or hx600"
endsw
